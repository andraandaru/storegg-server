<div class="card card-primary">
  <div class="card-header">
    <h3 class="card-title">Form Ubah Nominal <%= nominal.coinName %></h3>
  </div>
  <!-- /.card-header -->
  <!-- form start -->
  <form action="/nominal/edit/<%= nominal._id%>?_method=PUT" method="POST">
    <div class="card-body">
      <div class="form-group">
        <label>Nama koin</label>
        <select class="form-control select2" style="width: 100%" name="coinName" required>
          <option selected="selected">Pilih Koin</option>
          <option value="Gold" 
          <% if(nominal.coinName === "Gold") { %> 
            selected 
          <% } %>
            >Gold</option>
          <option value="Diamond"           <% if(nominal.coinName === "Diamond") { %> 
            selected 
          <% } %>>Diamond</option>
          <option value="Jewel"           <% if(nominal.coinName === "Jewel") { %> 
            selected 
          <% } %>>Jewel</option>
        </select>
      </div>
      <div class="form-group">
        <label for="coinQuantity">Jumlah Koin</label>
        <input
        value="<%= nominal.coinQuantity %>"
          type="number"
          class="form-control"
          id="coinQuantity"
          name="coinQuantity"
          placeholder="Masukan jumlah koin"
        />
      </div>
      <div class="form-group">
        <label for="price">Masukkan harga</label>
        <input
        value="<%= nominal.price %>"
          type="number"
          class="form-control"
          id="price"
          name="price"
          placeholder="Masukan harga"
        />
      </div>
    </div>
    <div class="card-footer">
      <button type="submit" class="btn btn-primary">Simpan</button>
    </div>
  </form>
</div>
